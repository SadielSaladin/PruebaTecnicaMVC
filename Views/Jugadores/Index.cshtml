@model IEnumerable<Jugador>
<div class="container">
    <div class="col-sm-6">
        <h3>Lista de Jugadores</h3>
    </div>
    <div class="col-sm-6">
        <a class="btn btn-success d-block" asp-action="Crear">Crear un nuevo Jugador</a>
    </div>
    <div class="col-sm-6">
        <a class="btn btn-success d-block" asp-action="Estado">Listar Jugadores por estado</a>
    </div>

</div>
<div class="row">
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <td>@Html.DisplayNameFor(b => b.Id)</td>
                    <td>@Html.DisplayNameFor(b => b.Nombre)</td>
                    <td>@Html.DisplayNameFor(b => b.Apellido)</td>
                    <td>@Html.DisplayNameFor(b => b.Fecha_Nacimiento)</td>
                    <td>@Html.DisplayNameFor(b => b.Estado.Nombre_Estado)</td>
                    <td>@Html.DisplayNameFor(b => b.Pasporte)</td>
                    <td>@Html.DisplayNameFor(b => b.Direccion)</td>
                    <td>@Html.DisplayNameFor(b => b.Sexo)</td>
                    <td>Acciones</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Nombre</td>
                    <td>@item.Apellido</td>
                    <td>@item.Fecha_Nacimiento</td>
                    <td>@item.Estado.Nombre_Estado</td>
                    <td>@item.Pasporte</td>
                    <td>@item.Direccion</td>
                    <td>@item.Sexo</td>
                    <td>
                        <a asp-action="Editar" asp-route-id="@item.Id" class="btn btn-warning">Editar</a>
                        <a asp-action="Eliminar" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No existe ningun Jugador</p>
    }
</div>