@model Jugador
<form asp-action="Editar" method="post">
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                <label>Nombre</label>
                <input asp-for="Nombre" type="text" class="form-control required" placeholder="Entre el nombre del Jugador" tabindex="1">
            </div>
            <div class="form-group">
                <label>Apellido</label>
                <input asp-for="Apellido" type="text" class="form-control required" placeholder="Entre el apellido del jugador" tabindex="2">
            </div>
            <div class="form-group">
                <label>Estado:</label>
                <select asp-for="Estado_id" class="form-control" asp-items="ViewBag.Estado_id"></select>
            </div>
            <div class="form-group">
                <label>Fecha</label>
                <input asp-for="Fecha_Nacimiento" type="date" class="form-control required" tabindex="3">
            </div>
            <div class="form-group">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            <div class="form-group">
                <label>Pasaporte</label>
                <input asp-for="Pasporte" type="text" class="form-control required" placeholder="Entre su pasaporte" tabindex="4">
            </div>
            <div class="form-group">
                <label>Direccion</label>
                <input asp-for="Direccion" type="text" class="form-control required" placeholder="Entre su Direccion" tabindex="5">
            </div>
            <div class="form-group">
                <label>Sexo</label>
                <select>
                    <option value="M">Hombre</option>
                    <option value="F">Mujer</option>
                </select>
            </div>
            <div class="card-footer">
                <center>
                    <button type="submit" class="btn btn-primary">Actualizar Datos</button>
                    <a asp-action="Index" asp-controller="Jugador" class="btn btn-secondary">Volver</a>
                </center>
            </div>
        </div>
    </div>
</form>