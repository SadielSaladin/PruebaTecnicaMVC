@model Estado
<form asp-action="Crear" method="post">
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                <label>Nombre</label>
                <input asp-for="Nombre_Estado" type="text" class="form-control required" placeholder="Activo/Cancelado/Agente Libre" tabindex="1">
            </div>
            <div class="form-group">
                <label>Apellido</label>
                <input asp-for="Fecha_Creacion" type="date" class="form-control required" tabindex="2">
            
            <div class="card-footer">
                <center>
                    <button type="submit" class="btn btn-primary">Crear</button>
                    <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Volver</a>
                </center>
            </div>
        </div>
    </div>
        </div>
</form>