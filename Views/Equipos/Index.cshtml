@model IEnumerable<Equipo>
<div class="container">
    <div class="col-sm-6">
        <h3>Lista de equipos</h3>
    </div>
    <div class="col-sm-6">
        <a class="btn btn-success d-block" asp-action="Crear">Crear un nuevo equipo</a>
    </div>

</div>
<div class="row">
    @if (Model.Count()>0)
    {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <td>@Html.DisplayNameFor(b => b.Id)</td>
                    <td>@Html.DisplayNameFor(b => b.Nombre)</td>
                    <td>@Html.DisplayNameFor(b => b.Pais)</td>
                    <td>@Html.DisplayNameFor(b => b.Fecha_Creacion)</td>
                    <td>Acciones</td>
                    <td>@Html.DisplayNameFor(b => b.Estado)</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Nombre</td>
                    <td>@item.Pais</td>
                    <td>@item.Fecha_Creacion</td>
                   <td>@item.Estado.Nombre_Estado</td>
                    <td>
                        <a asp-action="Editar" asp-route-id="@item.Id" class="btn btn-warning">Editar</a>
                        <a asp-action="Eliminar" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No existe ningun equipo</p>
    }
</div>