@model Equipo
<form asp-action="Editar" method="post">
    <input type="hidden" asp-for="Id" />
<div class="row">
    <div class="col-lg-12">
        <div class="form-group">
            <label>Nombre</label>
            <input asp-for="Nombre" type="text" class="form-control required" placeholder="Entre el nombre del equipo" tabindex="1">
        </div>
        <div class="form-group">
            <label>pais</label>
            <select asp-for="Pais" class="form-control-sm " tabindex="2">
                <option value="004">Afghanistan</option>
                <option value="188">Costa Rica</option>
                <option value="214">Dominican Republic</option>
                <option value="218">Ecuador</option>
                <option value="222">El Salvador</option>
            </select>
        </div>
        <div class="form-group">
            <label>Estado:</label>
            <select asp-for="EstadoID" class="form-control" asp-items="ViewBag.EstadoID"></select>
        </div>
        <div class="form-group">
            <label>Fecha</label>
            <input asp-for="Fecha_Creacion" type="date" class="form-control required" tabindex="5">
        </div>
        <div class="form-group">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <center>
                <button type="submit" class="btn btn-primary">Actualizar Datos</button>
                <a asp-action="Index" asp-controller="Equipos" class="btn btn-secondary">Volver</a>
            </center>
        </div>
    </div>
</div>
</form>